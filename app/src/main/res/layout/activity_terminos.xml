<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TerminosActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:elevation="8dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
            android:id="@+id/tituloUno"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/tituloUno"
            android:textColor="@color/black"></TextView>

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/parrafoUno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp"
                android:text="@string/textoUno"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/parrafoDos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp"
                android:text="@string/textoDos"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/parrafoTres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp"
                android:text="@string/textoTres"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>