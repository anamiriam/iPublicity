<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/ic_vaso_foreground"
    android:scaleType="centerCrop"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d8000000"
    android:gravity="center">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="70dp"
        android:padding="10dp"
        android:src="@mipmap/dejavu_foreground"></ImageView>

    <Button
        android:id="@+id/loginEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_redondeado_blanco"
        android:text="@string/button_loginEntrar"
        android:textSize="16dp"
        android:elevation="5dp"
        android:layout_marginBottom="30dp">
    </Button>

    <Button
        android:id="@+id/loginRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_redondeado_gris"
        android:text="@string/button_loginRegistrar"
        android:textSize="16dp"
        android:textColor="@color/write"
        android:elevation="5dp"
        android:layout_marginBottom="30dp">
    </Button>

</LinearLayout>
</RelativeLayout>